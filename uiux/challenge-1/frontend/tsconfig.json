{
  "compilerOptions": {
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "module": "commonjs",
    "diagnostics": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": false,
    "target": "ES6",
    "allowJs": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "allowUnusedLabels": true,
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test/**/*.ts"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
